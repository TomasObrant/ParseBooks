{% extends "layouts/base.html.twig" %}

{% block layout %}
    <div class="container">

        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                    {% endif %}
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-dark" href="#">Библиотека</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
{#                    <a class="link-secondary" href="#" aria-label="Поиск">#}
{#                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Поиск</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>#}
{#                    </a>#}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="btn btn-sm btn-outline-secondary m-1" href="{{ path('profile') }}">Профиль</a>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}">Выйти</a>
                    {% else %}
                        <a class="btn btn-sm btn-outline-secondary m-1" href="{{ path('app_register') }}">Регистрация</a>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_login') }}">Войти</a>
                    {% endif %}
                </div>
            </div>
        </header>

        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-center">
                <a class="p-2 link-secondary m-2" href="{{ path('index') }}">Главная</a>
                <a class="p-2 link-secondary m-2" href="{{ path('book_index') }}">Книги</a>
                <a class="p-2 link-secondary m-2" href="{{ path('contact_index') }}">Обратная связь</a>
                <a class="p-2 link-secondary m-2" href="{{ path('profile_index') }}">Пользователи</a>
            </nav>
        </div>

    </div>

    <main class="container wrapper flex-grow-1">
        {% block content %}

        {% endblock %}
    </main>

    <footer class="blog-footer text-center p-3" style="border-top: 1px solid #000;">
        <p> футер </p>

    </footer>
{% endblock %}
