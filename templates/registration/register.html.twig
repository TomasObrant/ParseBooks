{% extends "layouts/main.html.twig" %}

{% block title %}Register{% endblock %}

{% block content %}

    <h1 class="text-center">Register</h1>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email address'}}) }}
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'form-control mb-3', 'placeholder': 'Password'}
                }) }}
                <div class="form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        I agree to the <a href="#">terms and conditions</a>
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
