{% extends "layouts/main.html.twig" %}

{% block content %}

    <div class="container">
        <h1>List of Users</h1>
        <hr />

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="bg-dark text-light">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td><a href="{{ path('profile_show', {'id': user.id}) }}">{{ user.email }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

